<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.nimz.tdeecalculator.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/gender_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select your gender:"/>

        <LinearLayout
            android:id="@+id/gender_radio_button_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_alignParentLeft="true">

            <RadioGroup
                android:id="@+id/gender_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/male_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:text="Male"
                    android:layout_gravity="right"/>

                <RadioButton
                    android:id="@+id/female_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:text="Female"
                    android:layout_gravity="left"/>
            </RadioGroup>

        </LinearLayout>

        <TextView
            android:id="@+id/age_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select your age:"
            android:layout_marginBottom="8dp"/>

        <SeekBar
            android:id="@+id/age_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="85"
            android:progress="0"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/weight_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select your weight:"
            android:layout_marginBottom="8dp"/>

        <SeekBar
            android:id="@+id/weight_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="700"
            android:progress="85"/>

        <TextView
            android:id="@+id/exercise_days_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How many day per week of exercise?"
            android:layout_marginBottom="8dp"/>

        <SeekBar
            android:id="@+id/exercise_days_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="7"
            android:progress="0"/>

        <TextView
            android:id="@+id/exercise_minutes_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How many total minutes of exercise per day?"
            android:layout_marginBottom="8dp"/>

        <SeekBar
            android:id="@+id/exercise_minutes_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="480"
            android:progress="15"/>

        <TextView
        android:id="@+id/exercise_intensity_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How intense are your exercise sessions?"/>

        <LinearLayout
            android:id="@+id/exercise_intensity_button_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_alignParentLeft="true">

            <RadioGroup
                android:id="@+id/intensity_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/light_exercise_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:text="Light" />

                <RadioButton
                    android:id="@+id/moderate_exercise_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:text="Moderate" />

                <RadioButton
                    android:id="@+id/heavy_exercise_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:text="Heavy" />

                <RadioButton
                    android:id="@+id/intense_exercise_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:text="Intense" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttons_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_alignParentLeft="true">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:onClick="clearAll"
                android:text="Reset" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:onClick="clearAll"
                android:text="Calculate" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>